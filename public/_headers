  Cache-Control: public, max-age=86400, stale-while-revalidate=43200

/blog/*
  Cache-Control: public, max-age=86400, stale-while-revalidate=43200

/frequently-asked-questions/*
  Cache-Control: public, max-age=86400, stale-while-revalidate=43200

/privacy/*
  Cache-Control: public, max-age=86400, stale-while-revalidate=43200

/terms/*
  Cache-Control: public, max-age=86400, stale-while-revalidate=43200

/cookies/*
  Cache-Control: public, max-age=86400, stale-while-revalidate=43200

/sitemap/*
  Cache-Control: public, max-age=86400, stale-while-revalidate=43200

/404/*
  Cache-Control: public, max-age=86400, stale-while-revalidate=43200

# Static assets with content hashes (immutable - 1 year)
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Images in public folder (long cache - 30 days, allows revalidation)
/images/*
  Cache-Control: public, max-age=2592000, stale-while-revalidate=86400

/og/*
  Cache-Control: public, max-age=2592000, stale-while-revalidate=86400

/*.png
  Cache-Control: public, max-age=2592000, stale-while-revalidate=86400

/*.jpg
  Cache-Control: public, max-age=2592000, stale-while-revalidate=86400

/*.webp
  Cache-Control: public, max-age=2592000, stale-while-revalidate=86400

/*.ico
  Cache-Control: public, max-age=2592000, stale-while-revalidate=86400

# Fonts (immutable - 1 year)
/*.woff
  Cache-Control: public, max-age=31536000, immutable

/*.woff2
  Cache-Control: public, max-age=31536000, immutable

/*.ttf
  Cache-Control: public, max-age=31536000, immutable

/*.otf
  Cache-Control: public, max-age=31536000, immutable

# PWA assets (short cache for manifest, service worker)
/manifest.webmanifest
  Cache-Control: public, max-age=86400

/sw.js
  Cache-Control: no-cache, must-revalidate

/workbox-*.js
  Cache-Control: public, max-age=31536000, immutable

# SEO files - allow indexing, moderate cache
/robots.txt
  Cache-Control: public, max-age=86400

# Sitemap now served by edge function - no static headers needed

/llm.html
  Cache-Control: public, max-age=86400

# API responses should not be cached by CDN
