---
import BaseLayout from '../layouts/BaseLayout.astro';
import { BRAND } from '../data/brand';
import { SERVICES } from '../data/services';

export const prerender = true;

// SEO-optimized title (50-60 chars)
const title = `Page Not Found | ${BRAND.brandName}`;

// SEO-optimized description (120-155 chars)
const description = `Sorry, this page doesn't exist. Find professional drainage services across ${BRAND.serviceAreaLabel} or call ${BRAND.phoneFormatted} for immediate help.`;
---

<BaseLayout title={title} description={description} noindex={true}>
  <section class="section-padding">
    <div class="container-wide px-4">
      <div class="max-w-2xl mx-auto text-center">
        <!-- 404 Icon -->
        <div class="mb-8">
          <span class="text-8xl md:text-9xl font-bold text-primary/20">404</span>
        </div>

        <h1 class="text-3xl md:text-4xl font-bold mb-4">Page Not Found</h1>

        <p class="text-lg text-muted-foreground mb-8">
          Sorry, we couldn't find the page you're looking for. It may have been moved, deleted, or the URL might be incorrect.
        </p>

        <!-- Emergency Contact -->
        <div class="bg-primary/10 rounded-xl p-6 mb-8">
          <p class="text-lg font-semibold mb-2">Need emergency drain help?</p>
          <p class="text-muted-foreground mb-4">Our team is available 24/7 for urgent callouts.</p>
          <a
            href={`tel:${BRAND.phone}`}
            class="btn-primary text-lg inline-flex items-center gap-2"
          >
            <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path></svg>
            Call {BRAND.phoneFormatted}
          </a>
        </div>

        <!-- Navigation Options -->
        <div class="space-y-6">
          <div>
            <h2 class="text-xl font-bold mb-4">Find What You Need</h2>
            <div class="flex flex-wrap justify-center gap-3">
              <a href="/" class="btn-outline">
                Go to Homepage
              </a>
              <a href="/services/" class="btn-outline">
                View All Services
              </a>
              <a href="/locations/" class="btn-outline">
                Browse Service Areas
              </a>
              <a href="/contact/" class="btn-outline">
                Contact Us
              </a>
            </div>
          </div>

          <!-- Quick Service Links -->
          <div class="pt-6 border-t border-border">
            <h3 class="text-lg font-semibold mb-4">Popular Services</h3>
            <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-3">
              {SERVICES.slice(0, 6).map((service) => (
                <a
                  href={`/services/${service.slug}/`}
                  class="flex items-center gap-2 p-3 bg-muted rounded-lg hover:bg-muted/70 transition-colors"
                >
                  <span class="text-xl">{service.icon}</span>
                  <span class="font-medium text-sm">{service.name}</span>
                </a>
              ))}
            </div>
          </div>
        </div>

        <!-- Help Text -->
        <p class="text-sm text-muted-foreground mt-8">
          If you believe this is an error, please <a href="/contact/" class="text-primary hover:underline">contact us</a> and let us know.
        </p>
      </div>
    </div>
  </section>
</BaseLayout>
