---
import BaseLayout from '../layouts/BaseLayout.astro';
import { BRAND } from '../data/brand';
import { SERVICES } from '../data/services';
import { PAGE_FAQS } from '../data/faqs';
import { getBreadcrumbSchema, getFAQSchema, getWebPageSchema, serializeSchema } from '../utils/schema';

// SEO-optimized title (50-60 chars)
const title = `Blocked Drains Manchester FAQ | Drainage Questions`;

// SEO-optimized description (120-155 chars) with benefits and CTA
const description = `Find answers to common questions about blocked drains, costs, response times, and emergency callouts in Manchester. Still need help? Call ${BRAND.phoneFormatted}.`;

const keywords = "blocked drains Manchester FAQ, drain unblocking questions, drainage frequently asked questions Manchester";

const breadcrumbItems = [
  { name: "Home", url: "/" },
  { name: "FAQs", url: "/frequently-asked-questions/" }
];

const breadcrumbSchema = getBreadcrumbSchema(breadcrumbItems);
const faqSchema = getFAQSchema(PAGE_FAQS);
const webPageSchema = getWebPageSchema({
  url: '/frequently-asked-questions/',
  name: title,
  description: description,
  breadcrumb: breadcrumbItems
});

const combinedPageSchema = [breadcrumbSchema, faqSchema, webPageSchema];
---

<BaseLayout title={title} description={description} canonical="/frequently-asked-questions/" schema={combinedPageSchema} keywords={keywords}>
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="hero-overlay py-16 md:py-20">
      <div class="container-wide px-4 text-center text-white">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">Frequently Asked Questions</h1>
        <p class="text-lg text-white/90 max-w-2xl mx-auto">
          Answers to common questions about our drainage services
        </p>
      </div>
    </div>
  </section>

  <!-- FAQ Content -->
  <section class="section-padding">
    <div class="container-wide px-4">
      <div class="max-w-3xl mx-auto">
        <div class="space-y-4">
          {PAGE_FAQS.map((faq) => (
            <details class="bg-card rounded-lg card-elevated group">
              <summary class="p-4 md:p-6 cursor-pointer font-semibold text-lg hover:text-primary transition-colors flex items-center justify-between">
                {faq.question}
                <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="shrink-0 ml-2 group-open:rotate-180 transition-transform"><path d="m6 9 6 6 6-6"></path></svg>
              </summary>
              <div class="px-4 md:px-6 pb-4 md:pb-6 text-muted-foreground" set:html={faq.answer}>
              </div>
            </details>
          ))}
        </div>

        <!-- Quick Links to Services -->
        <div class="mt-12 pt-8 border-t border-border">
          <h2 class="text-xl font-bold mb-4">Explore Our Services</h2>
          <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-3 mb-6">
            {SERVICES.map((service) => (
              <a href={`/services/${service.slug}/`} class="flex items-center gap-2 p-3 bg-muted rounded-lg hover:bg-muted/70 transition-colors">
                <span class="text-xl">{service.icon}</span>
                <span class="font-medium text-sm">{service.name}</span>
              </a>
            ))}
          </div>
          <p class="text-sm text-muted-foreground">
            <a href="/" class="text-primary hover:underline">Home</a>
            {" 路 "}
            <a href="/services/" class="text-primary hover:underline">All Services</a>
            {" 路 "}
            <a href="/locations/" class="text-primary hover:underline">All Locations</a>
            {" 路 "}
            <a href="/blog/" class="text-primary hover:underline">Blog</a>
            {" 路 "}
            <a href="/about/" class="text-primary hover:underline">About Us</a>
          </p>
        </div>

        <div class="mt-12 text-center">
          <h2 class="text-2xl font-bold mb-4">Still have questions?</h2>
          <p class="text-muted-foreground mb-6">
            Our friendly team is here to help with any drainage questions you may have.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href={`tel:${BRAND.phone}`} class="btn-primary">
              Call {BRAND.phoneFormatted}
            </a>
            <a href="/contact/" class="btn-outline">
              Contact Us
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section-padding bg-primary text-primary-foreground">
    <div class="container-wide px-4 text-center">
      <h2 class="text-3xl font-bold mb-4">Need Drainage Help?</h2>
      <p class="text-xl text-primary-foreground/90 mb-8 max-w-2xl mx-auto">
        Our expert team is available 24/7 for emergency callouts across {BRAND.serviceAreaLabel}.
      </p>
      <a href={`tel:${BRAND.phone}`} class="bg-white text-primary font-semibold px-8 py-4 rounded-lg shadow-lg hover:bg-white/90 transition-all text-lg inline-block">
        Call {BRAND.phoneFormatted}
      </a>
    </div>
  </section>
</BaseLayout>
