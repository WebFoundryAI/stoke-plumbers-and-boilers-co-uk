---
import BaseLayout from '../layouts/BaseLayout.astro';
import { BRAND } from '../data/brand';
import { SERVICES } from '../data/services';
import { INDEXED_LOCATIONS } from '../data/locations';
import { BLOG_POSTS } from '../data/blog';
import { getBreadcrumbSchema } from '../utils/schema';

// SEO-optimized title (50-60 chars)
const title = `Sitemap | Browse All Pages and Services`;

// SEO-optimized description (120-155 chars)
const description = `Complete sitemap for ${BRAND.brandName}. Browse all drainage services, locations across Greater Manchester, and information pages on our website.`;

const breadcrumbSchema = getBreadcrumbSchema([
  { name: "Home", url: "/" },
  { name: "Sitemap", url: "/sitemap/" }
]);

const staticPages = [
  { url: '/', name: 'Home' },
  { url: '/services/', name: 'All Services' },
  { url: '/locations/', name: 'All Locations' },
  { url: '/about/', name: 'About Us' },
  { url: '/contact/', name: 'Contact Us' },
  { url: '/frequently-asked-questions/', name: 'FAQ' },
  { url: '/privacy/', name: 'Privacy Policy' },
  { url: '/terms/', name: 'Terms of Service' },
  { url: '/cookies/', name: 'Cookie Policy' },
];

const servicePages = SERVICES.map(service => ({
  url: `/services/${service.slug}/`,
  name: service.name,
}));

const subServicePages = SERVICES.flatMap(service =>
  (service.subServices || []).map(sub => ({
    url: `/services/${service.slug}/${sub.slug}/`,
    name: `${sub.name} (${service.name})`,
  }))
);

const locationPages = INDEXED_LOCATIONS.map(location => ({
  url: `/locations/${location.slug}/`,
  name: location.name,
}));

const serviceLocationPages = INDEXED_LOCATIONS.flatMap(location =>
  SERVICES.map(service => ({
    url: `/locations/${location.slug}/${service.slug}/`,
    name: `${service.name} in ${location.name}`,
  }))
);

const blogPages = BLOG_POSTS.map(post => ({
  url: `/blog/${post.slug}/`,
  name: post.title,
}));

const totalPages =
  staticPages.length +
  servicePages.length +
  subServicePages.length +
  locationPages.length +
  serviceLocationPages.length +
  blogPages.length +
  1; // for /blog/ index page
---

<BaseLayout title={title} description={description} canonical="/sitemap/" noindex={true} schema={breadcrumbSchema}>
  <section class="section-padding">
    <div class="container-wide px-4">
      <h1 class="text-3xl font-bold mb-2">Sitemap</h1>
      <p class="text-muted-foreground mb-8">Total pages: {totalPages}</p>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Main Pages -->
        <div>
          <h2 class="text-xl font-semibold mb-4">Main Pages</h2>
          <ul class="space-y-2">
            {staticPages.map(page => (
              <li>
                <a href={page.url} class="text-primary hover:underline">
                  {page.name}
                </a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Services -->
        <div>
          <h2 class="text-xl font-semibold mb-4">Services ({servicePages.length})</h2>
          <ul class="space-y-2">
            {servicePages.map(page => (
              <li>
                <a href={page.url} class="text-primary hover:underline">
                  {page.name}
                </a>
              </li>
            ))}
          </ul>

          {subServicePages.length > 0 && (
            <div class="mt-4">
              <h3 class="font-medium mb-2">Sub-Services ({subServicePages.length})</h3>
              <ul class="space-y-1 text-sm">
                {subServicePages.map(page => (
                  <li>
                    <a href={page.url} class="text-primary hover:underline">
                      {page.name}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          )}
        </div>

        <!-- Locations -->
        <div>
          <h2 class="text-xl font-semibold mb-4">Locations ({locationPages.length})</h2>
          <ul class="space-y-2">
            {locationPages.map(page => (
              <li>
                <a href={page.url} class="text-primary hover:underline">
                  {page.name}
                </a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Blog -->
        <div>
          <h2 class="text-xl font-semibold mb-4">Blog ({blogPages.length})</h2>
          <ul class="space-y-2">
            <li>
              <a href="/blog/" class="text-primary hover:underline font-medium">
                Blog Home
              </a>
            </li>
            {blogPages.map(page => (
              <li>
                <a href={page.url} class="text-primary hover:underline text-sm">
                  {page.name}
                </a>
              </li>
            ))}
          </ul>
        </div>
      </div>

      <!-- Local Services -->
      <div class="mt-12">
        <h2 class="text-xl font-semibold mb-4">Local Services ({serviceLocationPages.length})</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {INDEXED_LOCATIONS.map(location => (
            <div>
              <h3 class="font-medium mb-2">{location.name}</h3>
              <ul class="space-y-1 text-sm">
                {SERVICES.map(service => (
                  <li>
                    <a
                      href={`/locations/${location.slug}/${service.slug}/`}
                      class="text-primary hover:underline"
                    >
                      {service.name}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>

      <div class="mt-12 pt-8 border-t border-border text-sm text-muted-foreground">
        <p>
          <a href="/sitemap.xml" class="text-primary hover:underline" target="_blank" rel="noopener noreferrer">
            View XML Sitemap
          </a>
        </p>
      </div>
    </div>
  </section>
</BaseLayout>
